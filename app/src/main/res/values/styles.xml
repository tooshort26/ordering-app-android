<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">#212121</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="NavigationView" >
        <item name="fontFamily">@font/product_sans</item>
    </style>


    <style name="FacebookLoginButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">Sign in with facebook</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/product_sans</item>
    </style>



</resources>
