<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="8dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/foodLayout">



        <ImageView
            android:padding="8dp"
            android:id="@+id/cart_food_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:src="@drawable/maiplace" />


        <LinearLayout
            android:layout_toEndOf="@id/cart_food_image"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:textColor="@color/textSecondaryColor"
                    android:text="Food name"
                    android:textSize="17sp"
                     />



                <TextView
                    android:id="@+id/cart_food_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:textColor="@color/textSecondaryColor"
                    android:text="Food quantity"
                    android:textSize="17sp"
                     />

                <TextView
                    android:id="@+id/cart_food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:textColor="@color/textSecondaryColor"
                    android:text="Food price"
                    android:textSize="17sp"
                     />



                <TextView
                    android:visibility="gone"
                    android:id="@+id/cart_food_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans"
                    android:textColor="@color/textSecondaryColor"
                    android:text="Food Add to cart"
                    android:textSize="17sp"
                     />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_horizontal"
                    android:orientation="horizontal">

                        <Button
                            android:id="@+id/cartItemEdit"
                            android:minHeight="30dp"
                            android:minWidth="70dp"
                            android:background="#03A9F4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/product_sans"
                            android:textColor="#ffffff"
                            android:src="@drawable/ic_add_shopping_cart_black_24dp"
                            android:textAllCaps="false"
                            android:layout_marginRight="5dp"
                            android:text="Edit"/>


                        <Button
                            android:id="@+id/cartItemDelete"
                            android:minHeight="30dp"
                            android:minWidth="70dp"
                            android:background="#CC3433"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/product_sans"
                            android:textColor="#ffffff"
                            android:src="@drawable/ic_add_shopping_cart_black_24dp"
                            android:textAllCaps="false"
                            android:text="Remove"/>

                </LinearLayout>


        </LinearLayout>



</RelativeLayout>